/// Markdown grammar rules for defining heading, bold, italic and plain text styles

markdown = { heading | bold | italic | text }

/// Heading styling

heading = { (("#" ~ (!("\n") ~ ANY)*)+ ~ "\n") }

/// Plain text styling

text = { (!("#" | "*" | "\n") ~ ANY)+ }

/// Bold text styling

bold = { "**" ~ text ~ "**" }

/// Italic text styling

italic = { "*" ~ text ~ "*" }










